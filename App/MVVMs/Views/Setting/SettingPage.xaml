<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="App.MVVMs.Views.Setting.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI">
    <Grid>
        <StackPanel>
            <controls:SettingsCard x:Name="ThemeSelectorCard"
                                   Description="Change the app theme."
                                   Header="Theme color"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xE799;}">
                <ComboBox x:Name="ThemeBox" SelectedIndex="0" Loaded="ThemeLoaded"
                          SelectionChanged="ThemeSelectionChange">
                    <ComboBoxItem>Default</ComboBoxItem>
                    <ComboBoxItem>Light</ComboBoxItem>
                    <ComboBoxItem>Dark</ComboBoxItem>
                </ComboBox>
            </controls:SettingsCard>
        </StackPanel>
    </Grid>
</Page>